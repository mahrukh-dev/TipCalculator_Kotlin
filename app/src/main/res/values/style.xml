<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cost_of_service_edittext">
        <item name="android:layout_width">@dimen/_140sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:hint">@string/cost_of_service</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="layout_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tip_option_radiogroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:checkedButton">@id/option_twenty_percent</item>
    </style>

    <style name="switch_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:text">@string/round_up_tip</item>
        <item name="android:checked">true</item>
    </style>

</resources>